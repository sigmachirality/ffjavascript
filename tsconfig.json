{
  "compilerOptions": {
    "outDir": "./build",
    "allowJs": true,
    "strict": true,
    "target": "ESNext",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "lib": ["ESNext", "WebWorker", "DOM"],
  },
  "include": ["main.ts", "src/**/*"],
  "exclude": ["node_modules", "build"]
}